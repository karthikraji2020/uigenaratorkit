    <div class="linearGradient">
        <div class="inner-header flex" >
          <div class="container home-banner" id ="dynamicBackground">
      <div style="display: none;">
        <canvas width="1280px" height="650px"  style="background-image: linear-gradient(90deg, #ffff8f 50%, #ff9d00 50%); " id="thecanvas"></canvas>
            </div>
            <div class="d-flex justify-content-center">
                <div class="col-md-8">
                  <div class="linearGradientInnerContainer">
                  <h3 class="orientation text-light"> choose orientation</h3>
                  <div class="row">
                    <div class="btn-group btn-group-toggle text-light" id="directionBtnGroup" data-toggle="buttons">
                      <label class="btn btn-light active">
                        <input type="radio" name="directions" id="up" autocomplete="off" value="to up" > <i class="fa fa-arrow-up"></i>
                      </label>
                      <label class="btn btn-light">
                        <input type="radio" name="directions" id="right" autocomplete="off" value="to right">  <i class="fa fa-arrow-right"></i>
                      </label>
                      <label class="btn btn-light">
                        <input type="radio" name="directions" id="down" autocomplete="off" value="to down">  <i class="fa fa-arrow-down"></i>
                      </label>
                      <label class="btn btn-light">
                        <input type="radio" name="directions" id="left" autocomplete="off" value="to left">  <i class="fa fa-arrow-left"></i>
                      </label>
                    </div>
                  </div>
                  <div>Selected directions  <span id="selectedVal"></span></div>
  
              <input id="bgColorOne"   type="button" class="bgStopPointOne btn btn-dark" value="rgb(54, 238, 213)" onchange="changBgColorOne(this.value)" disabled>
              <input id="bgColorTwo"  type="button" class="bgStopPointTwo btn btn-dark" value="rgb(5, 1, 110)" onchange="changBgColorTwo(this.value)" disabled>
              <!-- <input hidden class="color-picker"/> -->
               <!-- <input id="bgColorOne" hidden  onchange="changeBgColor(this.value)"> -->
              <span class="bgOneColor-picker"></span>
              <span class="bgTwoColor-picker"></span>

              <!-- <button onclick="applyColor()">applyColor </button> -->
                        <!-- Button to Open the Modal -->
              <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="addcopycss()">
                Get Css
              </button>
              <button type="button" class="btn btn-primary" title="Download as Image" onclick="encodeURL()">
               <i class="fa fa-download"></i>
              </button>
                  </div>
                </div>
            </div>
          </div>
        </div>
      </div>

      <div class="modal fade" id="myModal">
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
          
            <!-- Modal Header -->
            <div class="modal-header">
              <h4 class="modal-title">Css Styles</h4>
              <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            
            <!-- Modal body -->
            <div class="modal-body">
            <a href="javascript:void(0)" data-toggle="tooltip" title="click To Get Css!"> 
            </a>
    
              <div class="copycss" onclick="CopyColorToClipboard(this)">
    
              </div>
            </div>
            
            <!-- Modal footer -->
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
            
          </div>
        </div>
      </div>
   
